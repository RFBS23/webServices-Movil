<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".editar">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="Registro de colaborador"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/apellidosE"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/cajas"
        android:hint="Apellidos"
        android:paddingStart="10dp"
        android:textSize="15dp"
        android:layout_marginTop="85dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="10dp" />

    <EditText
        android:id="@+id/nombresE"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingStart="10dp"
        android:hint="Nombres"
        android:textSize="15dp"
        android:background="@drawable/cajas"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/apellidosE"
        tools:layout_editor_absoluteX="20dp" />

    <EditText
        android:id="@+id/telefonoE"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingStart="10dp"
        android:maxLength="9"
        android:hint="Telefono"
        android:textSize="15dp"
        android:inputType="number"
        android:background="@drawable/cajas"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/nombresE"
        tools:layout_editor_absoluteX="24dp" />

    <EditText
        android:id="@+id/emailE"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingStart="10dp"
        android:hint="Correo Electronico"
        android:textSize="15dp"
        android:background="@drawable/cajas"
        android:inputType="textEmailAddress"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/telefonoE"
        tools:layout_editor_absoluteX="20dp" />

    <EditText
        android:id="@+id/direccionE"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingStart="10dp"
        android:hint="Direccion"
        android:textSize="15dp"
        android:background="@drawable/cajas"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/emailE"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/btneditar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boton"
        android:text="Actualizar Datos"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/direccionE"
        tools:layout_editor_absoluteX="20dp" />

    <Button
        android:id="@+id/btncancelar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boton"
        android:text="Cancelar"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btneditar"
        tools:layout_editor_absoluteX="20dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="240dp"
        android:layout_marginTop="418dp"
        android:src="@raw/shimeji2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>